{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "lib": ["ESNext"],
    "moduleResolution": "Node",
    "baseUrl": "./",
    "strict": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "allowJs": true,
    "esModuleInterop": true,
     "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "coverage", "dist"]
}
